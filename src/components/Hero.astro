---
import { marked } from 'marked';
import { type HeroSection } from 'types';
import Action from '@components/Action.astro';
import Section from '@components/Section.astro';

interface Props extends HeroSection {
    'data-sb-field-path'?: string;
}

const { heading: _heading, body: _body, cta, ...rest } = Astro.props;

// Override heading and subtitle with custom content
const heading = "Where Salons and Hairdressers Connect";
const body = "Cover shifts, find work, and keep the industry movingâ€”without the stress.";

// Override background to light blue (remove any existing background image)
const customRest = {
    ...rest,
    backgroundImage: undefined,
};
---

<Section {...customRest} class="text-center hero-light-blue-bg">
    {
        heading && (
            <h1 class="text-4xl font-black sm:text-6xl text-balance" data-sb-field-path=".heading">
                {heading}
            </h1>
        )
    }
    {body && <div class:list={['mx-auto', heading && 'mt-6', 'max-w-prose markdown']} data-sb-field-path=".body" set:html={marked.parse(body)} />}
</Section>

<style>
    :global(.hero-light-blue-bg) {
        background-color: #e3f1ff !important;
    }
</style>
